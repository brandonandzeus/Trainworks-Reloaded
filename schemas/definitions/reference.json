{
  "$id": "https://raw.githubusercontent.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/refs/heads/main/schemas/definitions/reference.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "type": "object",
      "required": [ "id" ],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 2,
          "pattern": "^@.+$",
          "description": "Unique reference to a particular object."
        },
        "mod_reference": {
          "type": "string",
          "description": "Optional mod guid to refrence id from. By default your mod is searched."
        }
      }
    },
    {
      "type": "string",
      "minLength": 2,
      "pattern": "^@.+$",
      "description": "Unique reference to a particular object."
    }
  ]
}